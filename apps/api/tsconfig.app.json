{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "lib": ["ES2021"],
        "target": "ES2021",
        "declaration": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "skipLibCheck": true,
        "outDir": "../../dist/out-tsc",
        "module": "commonjs",
        "types": ["node", "jest", "express"]
    },
    "include": ["**/*.ts", "../../libs/common/**/*"],
    "exclude": ["**/*.spec.ts"]
    // "include": [
    //     "../../libs/common/**/*",
    //     "../../libs/contracts/**/*",
    //     "../../package.json",
    //     "scripts/**/*.ts",
    //     "src/**/*.ts",
    //     "./package.json"
    // ]
}
