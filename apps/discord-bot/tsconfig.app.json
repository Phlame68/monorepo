{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "declaration": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "skipLibCheck": true,
        "outDir": "../../dist/out-tsc",
        "module": "commonjs",
        "types": ["node"]
    },
    "exclude": ["jest.config.ts", "**/*.spec.ts", "**/*.test.ts"],
    "include": [
        "**/*.ts",
        "scripts/**/*.ts",
        "src/**/*.ts",
        "../../package.json",
        "./package.json",
        "../../libs/common/**/*"
    ]
}
