{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": ".",
        "sourceMap": true,
        "declaration": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "importHelpers": true,
        "target": "es2019",
        "module": "es2020",
        "lib": ["es2019", "dom"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@thxnetwork/api*": ["apps/api/src/app*"],
            "@thxnetwork/auth*": ["apps/auth/src/app*"],
            "@thxnetwork/dashboard*": ["apps/dashboard/src*"],
            "@thxnetwork/public*": ["apps/public/src*"],
            "@thxnetwork/contracts*": ["libs/contracts*"],
            "@thxnetwork/sdk*": ["libs/sdk/src/lib*"],
            "@thxnetwork/common*": ["libs/common/src/lib*"]
        }
    },
    "exclude": ["node_modules", "tmp"]
}
