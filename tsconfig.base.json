{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "target": "es2019",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@thxprotocol/auth*": ["apps/auth/src*"],
      "@thxprotocol/common": ["libs/common/src/index.ts"],
      "@thxprotocol/dashboard*": ["apps/dashboard/src*"],
      /* Custom paths */
      "@thxprotocol/scss*": ["libs/common/src/lib/scss*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
